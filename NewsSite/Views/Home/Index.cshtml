@model IEnumerable<NewsSite.Models.Article>
@{
    ViewData["Title"] = "Home page";
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/Content/bootstrap.css" />
    <link rel="stylesheet" href="~/Content/site.css" />
</head>

<div id="articles" class="table">
    <table class="table table-bordered">
        @if ( Model.Count() > 0)
        {
            foreach (var article in Model)
            {
                <tr class="article" colspan="3">
                    <td class="article">
                        <table class="individualArticle">
                            <tr class="individualArticle">
                                <th colspan="3"><a href="@article.url">@article.title</a><div class="companyName">(@article.name)</div></th>
                            </tr>
                            <tr class="individualArticle">
                                <td class="articleCell articleCellLeft">@article.publishedDate</td>
                                <td class="articleCell">@article.author</td>
                            </tr>
                        </table>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr><td class="noResults">No results matched the search</td></tr>
        }
    </table>
    <div class="center">
        <div class="pagination">
            <a href="#" onClick="clickMinusPagination()">&laquo;</a>
            <a href="#" class="activePagination" id="pagination1" onClick="clickPagination(this.id)">1</a>
            <a href="#" id="pagination2" onClick="clickPagination(this.id)">2</a>
            <a href="#" id="pagination3" onClick="clickPagination(this.id)">3</a>
            <a href="#" id="pagination4" onClick="clickPagination(this.id)">4</a>
            <a href="#" id="pagination5" onClick="clickPagination(this.id)">5</a>
            <a href="#" id="pagination6" onClick="clickPagination(this.id)">6</a>
            <a href="#" onClick="clickPlusPagination()">&raquo;</a>
        </div>
    </div>
</div>
